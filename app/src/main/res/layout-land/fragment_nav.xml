<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="View Price (USD)"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/viewPriceButton"
        android:elevation="0dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blockInfoButton" />

    <Button
        android:text="Check Balance"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBalance"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Price Chart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/priceChartButton"
        android:textAlignment="center"
        android:layout_below="@+id/viewPriceButton"
        android:layout_alignStart="@+id/blockInfoButton" />

    <Button
        android:text="Block Info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/blockInfoButton"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/priceChartButton"
        android:layout_alignStart="@+id/checkBalance" />

</RelativeLayout>