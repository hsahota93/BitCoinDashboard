<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="306dp"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/Hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hashNum"
            android:textSize="20sp" />

        <TextView
            android:text="@string/Merkleroot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/merkleRoot"
            android:textSize="20sp" />

        <TextView
            android:text="Block Number:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blockNum"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/BlockHint"
            android:ems="10"
            android:id="@+id/searchBlock" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/Confirmations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blockConfirm"
            android:textSize="20sp" />

        <TextView
            android:text="@string/Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blockSize"
            android:textSize="20sp" />

        <TextView
            android:text="@string/Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blockDifficulty"
            android:textSize="20sp" />

        <TextView
            android:text="@string/NextBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextBlock"
            android:textSize="20sp" />

        <TextView
            android:text="@string/PreviousBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="@string/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prevBlock"
            android:textSize="20sp" />

        <Button
            android:text="@string/Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchButton" />

    </LinearLayout>
</LinearLayout>